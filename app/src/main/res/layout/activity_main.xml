<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <View android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/colorBlack"
            android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="10"
        android:background="@color/colorGray">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_launcher_web"
            android:layout_gravity="center"/>

        <TextView android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/size_20_sp"
            android:layout_weight="10"
            android:text="@string/name"
            android:background="@color/colorBlack"
            android:textColor="@color/colorWhite"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/p100dp">

            <TextView android:id="@+id/facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/small"
                android:layout_weight="1"
                android:background="@color/colorGray2"
                android:textColor="@color/colorWhite"
                android:text="@string/facebook" />

            <TextView android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/small"
                android:layout_weight="1"
                android:background="@color/colorGray2"
                android:textColor="@color/colorWhite"
                android:text="@string/email" />

        </LinearLayout>
        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/small"
            android:textColor="@color/colorWhite"
            android:textAlignment="center"/>
        <Button
            android:id="@+id/showage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_age"
            android:textColor="@color/colorWhite"
            android:background="@color/colorGray2"/>
        <Button
            android:id="@+id/showbirthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_birthday"
            android:textColor="@color/colorWhite"
            android:background="@color/colorGray2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cradite"
            android:layout_marginLeft="@dimen/magin_10_dp"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>

        <View android:layout_width="match_parent"
            android:layout_height="@dimen/h_20_dp"
            android:background="@color/colorBlack"
            android:layout_weight="1" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>